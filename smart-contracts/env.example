# Private Key (DO NOT SHARE - این کلید را به اشتراک نگذارید)
PRIVATE_KEY=your_private_key_here

# RPC URLs - آدرس‌های RPC شبکه‌ها
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon-rpc.com/
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com/
BSC_RPC_URL=https://bsc-dataseed.binance.org/
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# API Keys for Contract Verification - کلیدهای API برای تایید قراردادها
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
BSCSCAN_API_KEY=your_bscscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key

# Gas Reporter Configuration - پیکربندی گزارش گاز
REPORT_GAS=false
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Deployed Contract Addresses (بعد از deployment پر خواهد شد)
FACTORY_ADDRESS=
ROUTER_ADDRESS=
WETH_ADDRESS=
MULTICALL_ADDRESS=

# DEX Configuration - پیکربندی DEX
DEX_NAME=LAXCE_DEX
DEX_SYMBOL=LAXCE
INITIAL_FEE_RATE=30  # 0.3%
PROTOCOL_FEE_RATE=5  # 0.05%

# Flutter App Integration - اتصال با اپلیکیشن Flutter
FLUTTER_API_URL=http://localhost:3000
WEBSOCKET_URL=ws://localhost:3001
API_VERSION=v1

# Database Configuration (اگر نیاز باشد)
DATABASE_URL=mongodb://localhost:27017/laxce-dex
REDIS_URL=redis://localhost:6379

# Security Settings - تنظیمات امنیت
ENABLE_WHITELIST=false
EMERGENCY_PAUSE=false
MAX_SLIPPAGE=1000  # 10%

# Frontend Integration URLs
FRONTEND_URL=http://localhost:3000
BACKEND_API_URL=http://localhost:8000

# Multi-signature Wallet (برای عملیات حساس)
MULTISIG_WALLET_ADDRESS=
MULTISIG_THRESHOLD=2

# Oracle Configuration (برای price feeds)
CHAINLINK_ETH_USD_FEED=
CHAINLINK_BTC_USD_FEED=

# Notification Service (برای اطلاع‌رسانی)
NOTIFICATION_SERVICE_URL=
WEBHOOK_SECRET=

# Development Settings
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info 